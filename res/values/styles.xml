<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Splash" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Animations.SplashScreen</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Animations" parent="@android:Animation" />

    <style name="Animations.SplashScreen">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

 
    <style name="SectionTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:padding">?sectionListView.sectionTextViewPadding</item>
        <item name="android:textColor">?sectionListView.sectionTextViewTextColor</item>
        <item name="android:textSize">?sectionListView.sectionTextViewTextSize</item>
    </style>

    <style name="SectionItemStyle">
        <item name="android:padding">?sectionListView.sectionItemPadding</item>
        <item name="android:background">?sectionListView.sectionItemBackground</item>
    </style>

    <style name="ListTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:padding">?sectionListView.listTextViewPadding</item>
        <item name="android:textColor">?sectionListView.listTextViewTextColor</item>
        <item name="android:textSize">?sectionListView.listTextViewTextSize</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:padding">?sectionListView.listItemPadding</item>
        <item name="android:background">?sectionListView.listItemBackground</item>
    </style>

</resources>